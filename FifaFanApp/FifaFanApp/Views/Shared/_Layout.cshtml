<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<header id="header">
    <div class="header-container">          
        <h1>
            <a href='@Url.Action("Index", "Home")'>
             <img src='@Url.Content("~/Content/Images/fifafanlogo.png")' />
            </a>
        </h1>
        <div class="login">
            @Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-tabs" })
            @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-tabs" })
            @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "user-login" })
          </div>
    </div>
</header>
        @RenderBody()

@Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

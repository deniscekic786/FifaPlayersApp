@using System.Web.UI.WebControls
@model FifaFanApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Home Page";
}
<section id="main">
    <div class="homepage-container">
        <div id="regform-area">
            <div class="form">
                <h3>Register <span>free</span> to search your favorite Fifa 17 players</h3>
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "registration", role = "form" }))
                {
                        @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="registration-container">
                        <div class="registration-section" id="reg-sect-one">
                            <section id="email" class="dotted">
                                @Html.TextBoxFor(m => m.Email, new { required = "required", placeholder = "Hi, what is your email address?", autocomplete = "off", @class = "text", type = "email"})
                             </section>
                            <section id="password" class="dotted">
                                @Html.TextBoxFor(m => m.Password, new { required = "required", placeholder = "Please enter a password.", maxlength = "100", autocomplete = "off", @class = "text", type = "password" })
                              </section>
                            <section id="confirmPw">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { required = "required", placeholder = "Confirm your password.", autocomplete = "off", @class = "text", type = "password" })
                             </section>
                            <section class="ta-center">
                                <div class="reg-form-submit">
                                    <input id="regsubmit" type="submit" class="submit" value="Register" /> 
                                </div>
                            </section>
                        </div>
                    </div><!-- / registration container-->
                }
            </div>
        </div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

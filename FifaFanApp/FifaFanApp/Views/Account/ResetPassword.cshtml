@model FifaFanApp.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_ForgotPasswordLayout.cshtml";
}

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
        <h2>Reset your password</h2>
        <div id="error" class="notice errorMsg">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
        </div>
    <section>
        <label for="Email">Email Address:</label>
        @Html.TextBoxFor(m => m.Email, new { id = "Email", @class = "fpinput", autocomplete = "off", type = "email"})
    </section>
    <section>
        <label for="Password">Password:</label>
        @Html.TextBoxFor(m => m.Password, new { id = "Password", @class = "fpinput", autocomplete = "off", type = "password" })
    </section>
    <section>
        <label for="ConfirmPassword">Confirm Password:</label>
        @Html.TextBoxFor(m => m.ConfirmPassword, new { id = "ConfirmPassword", @class = "fpinput", autocomplete = "off", type = "password"})
    </section>
        <section class="submitbox">
            <input type="submit" value="Next" class="button">
        </section>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

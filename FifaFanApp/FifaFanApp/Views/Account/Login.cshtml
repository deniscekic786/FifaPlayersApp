@using FifaFanApp.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewBag.Title = "Log in"; //set to search players controller
}
<div class="content" id="sidebg" style="background-image: url('/Content/Images/FIFA17_XB1_PS4_EAPLAY_JAMES_CORNER_WM__1_.jpg');">
    <div class="loginform left">
        <h2>Members login here</h2>
@using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "login-form", role = "form"}))
{
    @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <section>
            <label for="Email">Email Address:</label>
            @Html.TextBoxFor(m => m.Email, new {id = "", @class = "linput", type = "email"})
            @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
        </section>

        <section>
            <label for="Password">Password:</label>
            @Html.PasswordFor(m => m.Password, new {id = "Password", @class = "linput", type = "password"})
            @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
            @Html.ActionLink("forgot password?", "ForgotPassword", "Account", new {area = ""}, new {@class = "forgot"})
        </section>
        <section>
            <input class="logbutton" type="submit"  value="Log In">
        </section>
        <section>
            <div class="persist-login">
               @Html.CheckBoxFor(m => m.RememberMe, new { id = "RememberMe", @checked = "checked" });
                <label for="RememberMe">Keep me logged in</label>
            </div>
        </section>
        <section class="extra">
            <div class="middle reglink">Not a member? 
                @Html.ActionLink("Register Now", "Index", "Home", new { area = "" }, new { @class = "forgot" })
            </div>
        </section>
}
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}